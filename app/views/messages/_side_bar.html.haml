.side-bar
  .side-header
    .side-header__box
      .side-header__box__user-name
        = current_user.nickname
      %ul.side-header__box__menu
        %li
          = link_to new_group_path, class: "side-header__box__menu__new-group" do
            = icon('fas', 'edit')
        %li
          = link_to edit_user_path(current_user), class: "side-header__box__menu__edit-user" do
            = icon('fas', 'cog')
  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to "#" do
          .group__name
            = group.name
          .group__latest-message
            latest-message